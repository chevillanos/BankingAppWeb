@page "{accountId:int}"
@model BankingAppWeb.Pages.Accounts.DetailModel
@{
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<h2>@Model.Account.AccountId</h2>
<div class="form-group">
    <div>
        Customer: @Model.Account.Customer.CustomerName
    </div>
    <div>
        Address: @Model.Account.AccountType
    </div>
</div>

<a asp-page="/Index" class="btn btn-outline-secondary">Back</a>